{
    // --- Python environment ---
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "python.terminal.activateEnvironment": true,

    // --- Linting ---
    "python.linting.enabled": true,
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoImportCompletions": true,
    "ruff.enable": true,
    "ruff.lint.enable": true,
    "ruff.format.enable": false, 

    // --- Formatting (Black) ---
    "python.formatting.provider": "black",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "always"
    },

    // --- Django support ---
    "python.analysis.djangoEnabled": true,
    "python.analysis.extraPaths": [
        "${workspaceFolder}"
    ],

    // --- Files & UI ---
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        ".venv": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true
    },
    "files.simpleDialog.enable": true,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 300,
    
    // --- Terminal environment ---
    "terminal.integrated.env.linux": {
        "DJANGO_SETTINGS_MODULE": "cinecraft.settings"
    },

    // --- Optional modern improvements ---
    "python.analysis.memory.keepLibraryAst": true,
    "python.analysis.completeFunctionParens": true,
    "editor.defaultFormatter": "mikoz.black-py",
    "editor.formatOnSaveMode": "modifications",
    "editor.codeActionsOnSaveTimeout": 750
}
